<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/main_logo"
            android:layout_margin="15dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#EFB75B"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/solid_button">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="일  식  집"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/bmjua_ttf"
            android:layout_margin="10dp" />
    </LinearLayout>
    <!--스크롤 뷰 시작-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/solid_button"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <!--menu1 레이아웃 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/menu1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="돈까스"
                    android:textSize="20dp"
                    android:textStyle="bold"></CheckBox>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/japan_menu1" />

            </LinearLayout>
            <!--menu1 레이아웃 끝-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#EFB75B" />
            <!--menu2 레이아웃 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/menu2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="초밥"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></CheckBox>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:background="@drawable/japan_menu2" />
            </LinearLayout>
            <!--menu2 레이아웃 끝-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#EFB75B" />
            <!--menu3 레이아웃 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/menu3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="텐동"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></CheckBox>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:background="@drawable/japan_menu3" />
            </LinearLayout>
            <!--menu3 레이아웃 끝-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#EFB75B" />
            <!--menu4 레이아웃 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/menu4"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:text="우동"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    ></CheckBox>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:background="@drawable/japan_menu4" />

            </LinearLayout>
            <!--menu4 레이아웃 끝-->


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/solid_button">
        <TextView
            android:id="@+id/total_price"
            android:text="총 가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmjua_ttf"
            android:layout_margin="10dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취  소"
            android:background="@drawable/solid_button"
            android:layout_gravity="bottom"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="30dp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/Btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확  인"
            android:layout_weight="1"
            android:background="@drawable/solid_button_full_color"
            android:layout_gravity="bottom"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="30dp"
            android:layout_margin="5dp"

            />
    </LinearLayout>

</LinearLayout>